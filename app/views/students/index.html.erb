<div class="row">
    <div class="col s12">
        <h1 class="center-align">Students Directory</h1>
    </div>
</div>

<div class="row">
    <% @students.each do |student| %>
        <div class="col s6 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= student.name %></span>
              <p><b>Email</b>: <%= student.email %></p>
              <p><b>Course Enrollment</b>: None</p>
            </div>
            <div class="card-action">
              <%= link_to '<i class="material-icons">pageview</i>View Profile'.html_safe, student_path(student) %>
            </div>
          </div>
        </div>
    <% end %>
</div>
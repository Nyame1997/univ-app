
<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p><b>Email</b>: <%= @student.email %></p>
        <p><b>Course Enrollment</b>: None</p>
      </div>
      <% if current_user == @student %>
        <div class="card-action">
            <%= link_to '<i class="material-icons right">edit</i>Edit Profile'.html_safe, edit_student_path(@student), class: "btn orange waves-effect waves-light btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>